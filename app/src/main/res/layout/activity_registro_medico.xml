<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.covidtracking2.RegistroMedico">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:gravity="center"
        android:text="Registro medico"
        android:textSize="24sp" />

    <EditText

        android:id="@+id/editCodigoMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordes_blanco"
        android:hint="Codigo de dr."
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#100F0F" />

    <EditText

        android:id="@+id/editLugarGraduado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordes_blanco"
        android:hint="Universidad o Instituto Graduado"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <EditText

        android:id="@+id/editanioGraduado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordes_blanco"
        android:hint="AÃ±o de Titulacion"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#0E0E0E" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="341dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="121dp"
                android:layout_height="48dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bordes_colorx"
                android:onClick="volver"
                android:text="Cancelar"
                android:textColor="#FBFBFB" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="161dp"
                android:layout_height="49dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="81dp"
                android:background="@drawable/boton_redondo"
                android:onClick="RegistrarMedico"
                android:text="Registrarse"
                android:textColor="#F8F8F8" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>