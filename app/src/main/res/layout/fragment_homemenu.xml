<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homemenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/celesxd"
        tools:context=".MenuInfo">

        <ImageView
            android:id="@+id/imglogomenu"
            android:layout_width="185dp"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="111dp"
            android:src="@drawable/logocovid" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="259dp"
            android:layout_marginBottom="679dp"
            android:text="COVID TRACKING" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="70dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@android:dimen/notification_large_icon_height">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/buttoninfo"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/infopre"
                        android:foregroundGravity="center" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/buttongps"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/gps" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/buttonSinto"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/sintoma" />

                    <TextView
                        android:id="@+id/textVieweval"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/buttonCentro"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/centrossalud" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/buttondoctor"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/doctor" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/buttonEval"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/eval" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>