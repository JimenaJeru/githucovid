<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentoAlimentacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consume Frutas sitricas para aumentar tu bitamina C"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="210dp"
                    android:layout_height="226dp"
                    android:src="@drawable/prevenir1"
                    app:srcCompat="@drawable/alimentacion1" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="210dp"
                    android:layout_height="288dp"
                    android:src="@drawable/prevenir2"
                    app:srcCompat="@drawable/alimentacion2" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consume verduras de igual manera"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="212dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/prevenir3"
                    app:srcCompat="@drawable/alimentacion3" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:src="@drawable/prevenir4"
                    app:srcCompat="@drawable/alimentacion4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="392dp"
                android:layout_height="246dp"
                android:src="@drawable/prevenir5"
                app:srcCompat="@drawable/alimentacion5" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>