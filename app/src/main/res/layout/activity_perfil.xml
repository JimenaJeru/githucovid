<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000BCD4"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@drawable/bordes_color">

            <ImageView
                android:id="@+id/imageViewPerfil"
                android:layout_width="145dp"
                android:layout_height="113dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="47dp"
                android:background="@drawable/perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bordes_color" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Editar imagen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPerfil" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="......Rol...."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_color"
                android:text="Datos"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="391dp"
                android:layout_height="115dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="139dp"
                        android:layout_height="35dp"
                        android:gravity="right"
                        android:text="Nombre:"
                        android:textColor="#0C0C0C" />

                    <EditText
                        android:id="@+id/tvNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textColor="#292626" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="189dp"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:text="Apellido"
                        android:textColor="#090808" />

                    <EditText
                        android:id="@+id/tvApellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"


                        android:ems="10"

                        android:inputType="text"

                        android:textColor="#292525" />

                </TableRow>

            </TableLayout>

            <EditText
                android:id="@+id/edittextemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="email"
                android:inputType="number"
                android:textColor="#050404"
                android:textColorHint="#070606" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:text="email"
                android:textColor="#0C0B0B"
                android:textColorHint="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="435dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordes_color"
                    android:text="@string/TexVCAracteristicas"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="217dp"
                    android:layout_height="match_parent"
                    android:text="@string/texVUsuario"
                    android:textAlignment="center"
                    android:textColor="#222020"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="......."
                    android:textColor="#050505"
                    android:textSize="20sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="179dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/btnEditar"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>