<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/celesxd"
    tools:context=".perfilmenu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000BCD4"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@drawable/bordes_color">

            <ImageView
                android:id="@+id/imageViewPerfil"
                android:layout_width="145dp"
                android:layout_height="113dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="47dp"
                android:background="@drawable/perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bordes_color" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Editar imagen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPerfil" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="......Rol...."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_color"
                android:text="Datos"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:animationCache="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewsint"
                    android:layout_width="212dp"
                    android:layout_height="match_parent"
                    android:text="@string/texVNombre"
                    android:textAlignment="center"
                    android:textColor="#222020"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Juana"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#D8D8D8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="131dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="54dp"
                    android:text="@string/texVEdad"
                    android:textAlignment="center"
                    android:textColor="#222020"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/tvEdad"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:text="18"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#D8D8D8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="122dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="56dp"
                    android:text="Correo electronico"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#222020"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/texVSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="54dp"
                    android:text="Femenino"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_color"
                android:text="@string/TexVCAracteristicas"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="185dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="@string/texVComunicase"
                    android:textAlignment="center"
                    android:textColor="#222020"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/buttonEnviarCalendario"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonEnviarCalendario"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="76dp"
                    android:background="@android:drawable/sym_action_chat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#D8D8D8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="217dp"
                    android:layout_height="match_parent"
                    android:text="@string/texVUsuario"
                    android:textAlignment="center"
                    android:textColor="#222020"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#D8D8D8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="152dp">

                <Button
                    android:id="@+id/btnCambiarContrasenia"
                    android:layout_width="264dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/btnCambiarContrasenia"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="255dp"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_2"
                    android:text="@string/btnEditar"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnSugerencias"
                    android:layout_width="264dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Sugerencias"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnEliminarCuenta"
                    android:layout_width="264dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Eliminar"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.588"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>